{
    "name": "git-dependency",
    "version": "0.1.0",
    "description": "Install / clones git repositories as dependencies defined in package.json.",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bylexus/git-dependency.git"
    },
    "author": "Alexander Schenkel",
    "email": "alex@alexi.ch",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/bylexus/git-dependency/issues"
    },
    "homepage": "https://github.com/bylexus/git-dependency#readme",
    "devDependencies": {
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-prettier": "^3.0.1",
        "prettier": "^1.16.4"
    },
    "bin": {
        "git-dependency": "bin/cmd.js"
    },
    "eslintConfig": {
        "root": true,
        "extends": "prettier",
        "env": {
            "node": true
        },
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "tabWidth": 4,
                    "printWidth": 120
                }
            ],
            "no-unused-vars": [
                "error",
                {
                    "vars": "all",
                    "args": "none"
                }
            ],
            "semi": [
                "error",
                "always"
            ],
            "curly": "error",
            "eqeqeq": "error",
            "no-eval": "error",
            "no-loop-func": "error",
            "radix": "error",
            "comma-dangle": "error",
            "no-undef": "error"
        }
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none"
    },
    "dependencies": {
        "commander": "^2.20.0",
        "jsonfile": "^5.0.0",
        "rimraf": "^2.6.3"
    }
}
